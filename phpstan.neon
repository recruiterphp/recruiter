parameters:
  level: 7
  paths:
    - src
    - tests
  scanDirectories:
    - %currentWorkingDirectory%/vendor/giorgiosironi/eris/src/
  ignoreErrors:
    - '#is_callable.*recruiter_#'
    - '#recruiter_became_master#'
    - '#recruiter_stept_back#'
